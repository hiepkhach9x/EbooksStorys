<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.CTCStudio.ebookstorys"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.CTCStudio.ebookstorys.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.CTCStudio.ebookstorys.StoryActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.CTCStudio.ebookstorys.StoryActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.CTCStudio.ebookstorys.Fragment.BookView"
            android:label="@string/title_activity_book_view" >
        </activity>
        <activity
            android:name="com.CTCStudio.ebookstorys.Fragmentr.DataView"
            android:label="@string/title_activity_data_view" >
        </activity>
        <activity
            android:name="com.CTCStudio.ebookstorys.Fragment.AudioView"
            android:label="@string/title_activity_audio_view" >
        </activity>
    </application>

</manifest>